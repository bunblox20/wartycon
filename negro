-- // Interfaz principal
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()
local Window = OrionLib:MakeWindow({
    Name = "Teleport & Aimbot",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "TeleportAimbotConfig"
})

-- // Variables generales
local teleportLocations = {
    ["Instalación"] = Vector3.new(-21.13, -25.72, -71.03),
    ["Torre de Radio"] = Vector3.new(-2073.50, 161.96, 56.07),
    ["Presa del Río"] = Vector3.new(22.34, 92.15, -1858.19),
    ["Almacén"] = Vector3.new(2069.64, 29.92, 44.33),
    ["Ciudad"] = Vector3.new(-152.41, 25.09, 2064.51)
}

local bestLocations = {
    ["Instalación"] = Vector3.new(-102.90, -91.58, -2.05),
    ["Presa del Río"] = Vector3.new(73.85, -3.41, -2078.20),
    ["Almacén"] = Vector3.new(2099.89, -13.11, 165.74),
    ["Ciudad"] = Vector3.new(-126.55, -33.63, 2094.55),
    ["Torre de Radio Extra"] = Vector3.new(-2078.64, -7.47, 57.63)
}

-- // Función para teletransportar
local function teleportPlayer(location)
    local character = game.Players.LocalPlayer.Character
    if character and character:FindFirstChild("HumanoidRootPart") then
        character.HumanoidRootPart.CFrame = CFrame.new(location)
    end
end

-- // Pestaña de Teletransporte
local TeleportTab = Window:MakeTab({
    Name = "Teleport",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

TeleportTab:AddSection({
    Name = "Zonas Comunes"
})

for name, position in pairs(teleportLocations) do
    TeleportTab:AddButton({
        Name = name,
        Callback = function()
            teleportPlayer(position)
        end
    })
end

TeleportTab:AddSection({
    Name = "Mejores Zonas"
})

for name, position in pairs(bestLocations) do
    TeleportTab:AddButton({
        Name = name,
        Callback = function()
            -- Crear una plataforma debajo del jugador
            local character = game.Players.LocalPlayer.Character
            if character and character:FindFirstChild("HumanoidRootPart") then
                local part = Instance.new("Part")
                part.Size = Vector3.new(10, 1, 10)
                part.Anchored = true
                part.Position = character.HumanoidRootPart.Position - Vector3.new(0, 3, 0)
                part.Parent = workspace

                -- Desaparece después de 10 segundos o cuando el jugador deja de tocarlo
                game:GetService("Debris"):AddItem(part, 10)
            end

            teleportPlayer(position)
        end
    })
end

-- // Pestaña de Extras
local ExtrasTab = Window:MakeTab({
    Name = "Extras",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

ExtrasTab:AddButton({
    Name = "Infinity Yield",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
    end
})

-- // Nueva pestaña: Aimbot
local AimbotTab = Window:MakeTab({
    Name = "Aimbot",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

AimbotTab:AddButton({
    Name = "Activar Aimbot",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/bunblox20/ainbot/refs/heads/master/primero"))()
    end
})

AimbotTab:AddSection({
    Name = "Funciones de Aimbot"
})

AimbotTab:AddButton({
    Name = "Reiniciar Configuración",
    Callback = function()
        -- Reinicia las configuraciones del Aimbot
        getgenv().Aimbot.Functions.ResetSettings()
    end
})

AimbotTab:AddButton({
    Name = "Salir del Aimbot",
    Callback = function()
        getgenv().Aimbot.Functions.Exit()
    end
})

AimbotTab:AddButton({
    Name = "Copiar URL del Script",
    Callback = function()
        setclipboard("https://github.com/Exunys/Aimbot-V2")
    end
})

-- // Pestaña de Configuración
local SettingsTab = Window:MakeTab({
    Name = "Configuración",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

SettingsTab:AddKeybind({
    Name = "Tecla para Cerrar Interfaz",
    Default = Enum.KeyCode.RightShift,
    Hold = false,
    Callback = function()
        OrionLib:Toggle()
    end
})

-- // Iniciar interfaz
OrionLib:Init()
