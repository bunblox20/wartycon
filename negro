--// Crear la interfaz de usuario

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.Name = "AimbotUI"

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 300)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -150)
MainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
MainFrame.Parent = ScreenGui

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "Aimbot Settings"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
Title.Parent = MainFrame

local ToggleAimbotButton = Instance.new("TextButton")
ToggleAimbotButton.Size = UDim2.new(0, 200, 0, 40)
ToggleAimbotButton.Position = UDim2.new(0.5, -100, 0.2, 0)
ToggleAimbotButton.Text = "Toggle Aimbot"
ToggleAimbotButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleAimbotButton.BackgroundColor3 = Color3.fromRGB(0, 191, 255)
ToggleAimbotButton.Parent = MainFrame

local SensitivitySlider = Instance.new("TextBox")
SensitivitySlider.Size = UDim2.new(0, 200, 0, 30)
SensitivitySlider.Position = UDim2.new(0.5, -100, 0.35, 0)
SensitivitySlider.Text = "Sensitivity: 0"
SensitivitySlider.TextColor3 = Color3.fromRGB(255, 255, 255)
SensitivitySlider.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
SensitivitySlider.ClearTextOnFocus = false
SensitivitySlider.Parent = MainFrame

local TeamCheckToggle = Instance.new("TextButton")
TeamCheckToggle.Size = UDim2.new(0, 200, 0, 40)
TeamCheckToggle.Position = UDim2.new(0.5, -100, 0.5, 0)
TeamCheckToggle.Text = "Enable Team Check"
TeamCheckToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
TeamCheckToggle.BackgroundColor3 = Color3.fromRGB(0, 191, 255)
TeamCheckToggle.Parent = MainFrame

local WallCheckToggle = Instance.new("TextButton")
WallCheckToggle.Size = UDim2.new(0, 200, 0, 40)
WallCheckToggle.Position = UDim2.new(0.5, -100, 0.65, 0)
WallCheckToggle.Text = "Enable Wall Check"
WallCheckToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
WallCheckToggle.BackgroundColor3 = Color3.fromRGB(0, 191, 255)
WallCheckToggle.Parent = MainFrame

--// Configuraci贸n del Aimbot
local aimbotEnabled = false
local teamCheck = false
local wallCheck = false
local sensitivity = 0

--// Funci贸n para activar o desactivar el aimbot
local function toggleAimbot()
    aimbotEnabled = not aimbotEnabled
    if aimbotEnabled then
        print("Aimbot Activado")
    else
        print("Aimbot Desactivado")
    end
end

--// Funci贸n para ajustar la sensibilidad
local function updateSensitivity(value)
    sensitivity = tonumber(value) or 0
    SensitivitySlider.Text = "Sensitivity: " .. sensitivity
end

--// Funciones para activar/desactivar Team Check y Wall Check
local function toggleTeamCheck()
    teamCheck = not teamCheck
    TeamCheckToggle.Text = teamCheck and "Disable Team Check" or "Enable Team Check"
    print("Team Check: " .. (teamCheck and "Enabled" or "Disabled"))
end

local function toggleWallCheck()
    wallCheck = not wallCheck
    WallCheckToggle.Text = wallCheck and "Disable Wall Check" or "Enable Wall Check"
    print("Wall Check: " .. (wallCheck and "Enabled" or "Disabled"))
end

--// Asignar eventos de los botones
ToggleAimbotButton.MouseButton1Click:Connect(toggleAimbot)
SensitivitySlider.FocusLost:Connect(function()
    updateSensitivity(SensitivitySlider.Text)
end)
TeamCheckToggle.MouseButton1Click:Connect(toggleTeamCheck)
WallCheckToggle.MouseButton1Click:Connect(toggleWallCheck)

--// Aimbot funcionalidad (Este es el c贸digo principal de aimbot)
local RunService = game:GetService("RunService")
local Camera = workspace.CurrentCamera
local LocalPlayer = game.Players.LocalPlayer
local Players = game.Players

local function getClosestPlayer()
    local closestPlayer = nil
    local shortestDistance = math.huge

    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Head") then
            local headPosition = player.Character.Head.Position
            local screenPosition, onScreen = Camera:WorldToViewportPoint(headPosition)
            if onScreen then
                local distance = (Vector2.new(screenPosition.X, screenPosition.Y) - Vector2.new(game:GetService("UserInputService"):GetMouseLocation().X, game:GetService("UserInputService"):GetMouseLocation().Y)).Magnitude
                if distance < shortestDistance then
                    shortestDistance = distance
                    closestPlayer = player
                end
            end
        end
    end
    return closestPlayer
end

--// Aimbot - Movimiento del mouse y enfoque al objetivo
RunService.RenderStepped:Connect(function()
    if aimbotEnabled then
        local closestPlayer = getClosestPlayer()
        if closestPlayer and closestPlayer.Character then
            local headPosition = closestPlayer.Character.Head.Position
            Camera.CFrame = CFrame.new(Camera.CFrame.Position, headPosition)
        end
    end
end)

--// Finalizar
print("Aimbot con interfaz cargado correctamente")
